call plug#begin('~/vimfiles/plugged')
Plug 'altercation/vim-colors-solarized'             " 主题
Plug 'vim-airline/vim-airline'                      " 状态栏
Plug 'vim-airline/vim-airline-themes'
call plug#end()

" ========================================
" solarized
" ========================================
syntax enable
set background=dark
colorscheme solarized
" ========================================
" airline
" ========================================
let g:airline_theme='solarized'

